import argparse
import os
import csv
import glob


def main():
    """ read a directory of CSV files and create a test-validate-train data set """
    parser = argparse.ArgumentParser()
    parser.add_argument('data_dir', help='directory containing CSVs you want to make a data set out of')
    args = parser.parse_args()

    csv_files = glob.glob(os.path.join(args.data_dir, "*.csv"), recursive=False)
    for csv_file in csv_files:
        csv_reader = csv.reader(open(csv_file, 'r'))
        for trial in csv_reader:
            for response in trial:
                print(float(response))


if __name__ == '__main__':
    main()