import argparse

import matplotlib.pyplot as plt
import numpy as np


def main():
    parser = argparse.ArgumentParser()
    parser.add_argument('activations', help='zip file containing activations and fps')
    parser.add_argument('-s', '--start', default=0, type=int, help='start index into array')
    parser.add_argument('-e', '--end', default=-1, type=int, help='end index into array')

    args = parser.parse_args()

    npz = np.load('activations.npz')
    activations = npz['activations.npy']

    plt.plot(activations[args.start:args.end])
    plt.show()
    npz.close()


if __name__ == '__main__':
    main()
